<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tytul_aktualności %>
    <%= f.text_field :tytul, :id => "news_form_tytul" %>
  </div>
  <div class="field">
    <%= f.label :tresc_aktualności %>
    <%= f.text_area :tresc , "style" => "width:99%;" %>
  </div>
  <div class="kategoria_box"  style="display:inline-block;">
    <%= f.label :Rodzaj_grupy %>
    <%= f.select(:rodzaj, options_for_select([['Interwencje', 'Interwencje'], ['Szkolenia', 'Szkolenia'], ['Imprezy', 'Imprezy'], ['Inne', 'Inne'], ['OTWP', 'OTWP']],@news.rodzaj), {}, {:class => "kategoria"}) %>
  </div>
  <div class="termin_box" style="display:inline-block; margin-left:50px;">
    <%= f.label :Termin_aktualności %>
    <%= f.date_select :termin, :order => [:day, :month, :year] %><br />
  </div>
  <div class="actions">
    <%= f.submit :value => 'Dodaj', "style" => "height:35px;width:100px;font-weight:bold;cursor:pointer;" %>
   <input name="commit" style="height:15.4px;width:100px;font-weight:bold;cursor:pointer;" value=" Wróć do listy" onclick="location.href = '/aktualnosci'">
  </div>
<br>
<% end %>
